<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aks.MyLabs.Address">

    <TextView
        android:id="@+id/savedaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="27dp"
        android:text="Saved Address"
        android:textColor="#333333"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/newaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Or enter new Address"
        android:textColor="#333333"
        android:textSize="20dp"
        android:layout_below="@+id/cbsavedaddress"
        android:layout_alignStart="@+id/cbsavedaddress" />

    <EditText
        android:id="@+id/etaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/newaddress"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/bnext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="place order"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/cbsavedaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="CheckBox"
        android:visibility="invisible"
        android:layout_below="@+id/savedaddress"
        android:layout_alignStart="@+id/savedaddress" />

    <TextView
        android:id="@+id/nosavedaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No saved address"
        android:layout_alignBaseline="@+id/cbsavedaddress"
        android:layout_alignBottom="@+id/cbsavedaddress"
        android:layout_toEndOf="@+id/cbsavedaddress" />

    <CheckBox
        android:id="@+id/cbsaveaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save this address"
        android:layout_below="@+id/spinner"
        android:layout_alignStart="@+id/etaddress"
        android:layout_marginTop="18dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etaddress"
        android:layout_alignStart="@+id/etaddress"
        android:layout_marginTop="17dp" />

    <Button
        android:id="@+id/bdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:text="Select Date"
        android:layout_above="@+id/bnext"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select the date for technician visit to collect the sample"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_above="@+id/bdate"
        android:layout_alignParentStart="true"
        android:textSize="16dp"/>

</RelativeLayout>
